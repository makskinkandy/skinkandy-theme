<div class="banner-track-my-order page-content {{ section.settings.class | escape }}" style="background: {{ section.settings.bg_color }};">
    <div class="page-width">
        <div class="section-content" style="--content-width: {{ section.settings.content_width }}%;">
            <p class="section-content__preheading h3">{{ section.settings.preheading | escape }}</p>
            <h2 class="section-content__heading h1">{{ section.settings.heading | newline_to_br }}</h2>

            <div class="section-form text-left">

                <form id="order-tracking-form" class="custom-form" action="https://auspost.com.au/track/track.html" target="_blank">
                    <div class="form-field type-text" style="--width: 80;">
                      <label for="tracking-number">Tracking Number <span class="required">*</span></label>
                      <input type="text" name="id" id="tracking-number" required>
                    </div>
                    <div class="form-field type-submit text-center" style="--width: 20;">
                      <button class="btn btn--full-width">{{ section.settings.button_text | escape }}</button>
                    </div>
                </form>

            </div>

            <div class="section-content__text rte">{{ section.settings.text | newline_to_br }}</div>
        </div>
    </div>
</div>  

{% schema %}
{
    "name": "Banner - Track my Order",
    "settings": [
        {
            "type": "header",
            "content": "General settings"
        },
        {
            "type": "text",
            "id": "class",
            "label": "Optional section class"
        },
        {
            "type": "color_background",
            "id": "bg_color",
            "label": "Background color",
            "default": "linear-gradient(#ffffff, #000000)"
        },
        {
            "type": "range",
            "id": "content_width",
            "label": "Content width",
            "default": 100,
            "min": 10,
            "max": 100,
            "unit": "%"
        },
        {
            "type": "header",
            "content": "Banner contents"
        },
        {
            "type": "text",
            "id": "preheading",
            "label": "Preheading"    
        },
        {
            "type": "richtext",
            "id": "heading",
            "label": "Heading"    
        },
        {
            "type": "richtext",
            "id": "text",
            "label": "Text"    
        },
        {
            "type": "header",
            "content": "Form settings"
        },
        {
            "type": "text",
            "id":   "button_text",
            "label": "Button text",
            "default": "Track"
        }
    ],
    "presets": [{
        "name": "Banner - Track my Order"
    }]
}
{% endschema %}