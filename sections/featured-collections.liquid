<div class="feature-collections page-content">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="section-header">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="grid-scroll" data-flickity='{"freeScroll": true, "contain": true, "pageDots": false, "prevNextButtons": false}'>
        {%- render 'collection-grid-item-alt' for section.blocks as block -%}
      </div>
    {%- else -%}
      <p class="no-content text-center">{{ 'home_page.onboarding.no_content' | t }}</p>
    {%- endif -%}

    {%- if section.blocks.size > 0 and section.settings.shop_all != blank -%}
      <div class="section-footer rte">
        <a href="{{ section.settings.shop_all | escape }}" class="link--underline">Shop all</a>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "Collection list",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collection list"
      },
      {
        "type": "range",
        "id": "display",
        "label": "Number of columns to",
        "default": 4,
        "min": 2,
        "max": 8,
        "step": 1
      },
      {
        "type": "url",
        "id": "shop_all",
        "label": "Shop all link"
      }
    ],
    "presets": [{
      "name": "Collection list"
    }],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "id": "collection",
            "type": "collection",
            "label": "Collection"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Optional image",
            "info": "Recommended size: 300px JPG"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Title",
            "info": "Defaults to collection title if empty"
          },
          {
            "type": "select",
            "id": "focal_point",
            "label": "Focal point",
            "info": "Used to keep the subject of your photo in view.",
            "default": "center center",
            "options": [
              {
                "value": "20% 0",
                "label": "Top left"
              },
              {
                "value": "top center",
                "label": "Top center"
              },
              {
                "value": "80% 0",
                "label": "Top right"
              },
              {
                "value": "20% 50%",
                "label": "Left"
              },
              {
                "value": "center center",
                "label": "Center"
              },
              {
                "value": "80% 50%",
                "label": "Right"
              },
              {
                "value": "20% 100%",
                "label": "Bottom left"
              },
              {
                "value": "bottom center",
                "label": "Bottom center"
              },
              {
                "value": "80% 100%",
                "label": "Bottom right"
              }
            ]
          }
        ]
      }
    ]
  }
{% endschema %}
