<div class="numbered-list-section {{ section.settings.class | escape }}" style="background-color: {{ section.settings.bg_color }}">
    <div class="page-width wrapper">
        {%- if section.settings.heading != blank -%}
            <div class="section-header">
                <h2 class="section-header__title">{{ section.settings.heading | escape }}</h2>
            </div>
        {%- endif -%}

        {%- if section.blocks.size > 0 -%}
            <div class="section-content">
                {%- for block in section.blocks -%}
                    <div class="numbered-list-item">
                        <span class="number">{{ block.settings.number | escape }}</span>
                        <span class="text">{{ block.settings.text | newline_to_br }}</span>
                    </div>
                {%- endfor -%}
            </div>
        {%- endif -%}

        {%- if section.settings.image != blank -%}
            <div class="section-image">
                <img src="{{ section.settings.image | img_url: '900x'}}" alt="{{ section.settings.image.alt | escape }}">
            </div>
        {%- endif -%}
    </div>
</div>

{% schema %}
{
    "name": "Numbered list",
    "settings": [
        {
            "type": "text",
            "id": "class",
            "label": "Optional section class"
        },
        {
            "type": "color",
            "id": "bg_color",
            "label": "Background color"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Section heading"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Section image"
        }
    ],
    "blocks": [
        {
            "type": "list_item",
            "name": "List item",
            "settings": [
                {
                    "type": "text",
                    "id": "number",
                    "label": "Number"
                },
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text"
                }
            ]
        }
    ],
    "presets": [{
        "name": "Numbered list"
    }]
}
{% endschema %}