{
    "name": "Piercing type: Body",
    "settings": [
        {
            "type": "paragraph",
            "content": "Blocks added will be used and displayed in the Image Markers section"
        }
    ],
    "blocks": [
        {
            "type": "body",
            "name": "Type: Body",
