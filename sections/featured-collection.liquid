{%- assign collection = section.settings.featured_collection -%}

<div id="CollectionSection-{{ section.id }}"  data-section-id="{{ section.id }}" data-section-type="collection-template" class="feature-collection page-content" style="background-color: {{ section.settings.bg_color }};">
  <div class="page-width">
    {%- if section.settings.title != blank -%}
      <div class="section-header">
        <h2 class="section-header__title {{ section.settings.heading_size }}">
          {{ section.settings.title | escape }}
        </h2>
      </div>
    {%- endif -%}

    {%- if collection.products.size > 0 -%}
      <div class="grid-scroll small--grid--flush" data-flickity='{"contain": true, "prevNextButtons": false, "groupCells": true}' style="--product-count: {{ section.settings.product_count }}">
        {%- for product in collection.products limit: section.settings.product_limit -%}
          {%- render 'product-grid-item', product: product, grid_item_width: 'medium-up--one-quarter small--one-whole' -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <p class="no-content text-center">{{ 'home_page.onboarding.no_content' | t }}</p>
    {%- endif -%}
  </div>
</div>

{% schema %}
  {
    "name": "Featured collection",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Section background color",
        "default": "#ffffff"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "type": "collection",
        "id": "featured_collection",
        "label": "Collection"
      },
      {
        "type": "range",
        "id": "product_count",
        "label": "Number of products to display on desktop view",
        "default": 4,
        "min": 2,
        "max": 5,
        "step": 1
      },
      {
        "type": "range",
        "id": "product_limit",
        "label": "Product limit",
        "default": 12,
        "min": 4,
        "max": 20
      },
      {
        "type": "select",
        "id": "heading_size",
        "label": "Heading text size",
        "default": "h1",
        "options": [
          {
            "value": "h1",
            "label": "H1"
          },
          {
            "value": "h2",
            "label": "H2"
          },
          {
            "value": "h3",
            "label": "H3"
          },
          {
            "value": "h4",
            "label": "H4"
          },
          {
            "value": "h5",
            "label": "H5"
          },
          {
            "value": "h6",
            "label": "H6"
          }
        ]
      }
    ],
    "presets": [{
      "name": "Featured collection"
    }],
    "blocks" : []
  }
{% endschema %}
